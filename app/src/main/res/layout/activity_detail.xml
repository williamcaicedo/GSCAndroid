<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="co.edu.utb.androidgeneticsyndromecatalog.DetailActivity">


    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/name"
        android:textSize="30dp"/>

    <ImageView
        android:id="@+id/illustrationImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameTextView"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"/>

    <TextView
        android:id="@+id/synonymLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/illustrationImageView"
        android:paddingTop="5dp"
        android:textColor="@color/synonym"
        android:text="Sinónimo:"/>
    <TextView
        android:id="@+id/synonymTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/synonymLabel"
        android:textColor="@color/name"/>

    <TextView
        android:id="@+id/geneLocusLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/synonymTextView"
        android:textColor="@color/synonym"
        android:text="Gen/locus:"/>

    <TextView
        android:id="@+id/geneLocusTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/geneLocusLabel"
        android:textColor="@color/name"/>

    <TextView
        android:id="@+id/siteLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/geneLocusTextView"
        android:textColor="@color/synonym"
        android:text="Localización:"/>

    <TextView
        android:id="@+id/siteTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/siteLabel"
        android:textColor="@color/name"/>

    <TextView
        android:id="@+id/geneticAnomalyLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/siteTextView"
        android:textColor="@color/synonym"
        android:text="Anomalía Genética:"/>

    <TextView
        android:id="@+id/geneticAnomalyTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/geneticAnomalyLabel"
        android:textColor="@color/name"/>

    <TextView
        android:id="@+id/inheritanceLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/geneticAnomalyTextView"
        android:textColor="@color/synonym"
        android:text="Herencia:"/>
    <TextView
        android:id="@+id/inheritanceTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/inheritanceLabel"
        android:textColor="@color/name"/>

    <TextView
        android:id="@+id/featuresLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/inheritanceTextView"
        android:paddingTop="5dp"
        android:textColor="@color/synonym"
        android:text="Características Clínicas:"/>

    <LinearLayout
        android:id="@+id/features"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/featuresLabel"
        android:orientation="vertical"/>

    <TextView
        android:id="@+id/evolutionLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/features"
        android:paddingTop="5dp"
        android:textColor="@color/synonym"
        android:text="Evolución:"/>
    <TextView
        android:id="@+id/evolutionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/evolutionLabel"
        android:textColor="@color/name"/>
    <TextView
        android:id="@+id/retardationLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/evolutionTextView"
        android:paddingTop="5dp"
        android:textColor="@color/synonym"
        android:text="Retardo mental:"/>
    <TextView
        android:id="@+id/retardationTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/retardationLabel"
        android:textColor="@color/name"/>

    <TextView
        android:id="@+id/examsLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/retardationTextView"
        android:paddingTop="5dp"
        android:textColor="@color/synonym"
        android:text="Exámenes clínicos de utilidad diagnóstica:"/>
    <TextView
        android:id="@+id/examsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/examsLabel"
        android:textColor="@color/name"/>
    <TextView
        android:id="@+id/omimLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/examsTextView"
        android:paddingTop="5dp"
        android:textColor="@color/synonym"
        android:text="Enlace OMIM:"/>

    <TextView
        android:id="@+id/omimTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/omimLabel"
        android:autoLink="web"
        android:linksClickable="true"
        android:textColor="@color/name"/>

    <TextView
        android:id="@+id/bibliographyLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/omimTextView"
        android:paddingTop="5dp"
        android:textColor="@color/synonym"
        android:text="Bibliografía:"/>

    <LinearLayout
        android:id="@+id/bibliography"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bibliographyLabel"
        android:orientation="vertical"/>
</RelativeLayout>
</ScrollView>